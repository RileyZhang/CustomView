<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.example.customview.view.WeiBoView
        android:id="@+id/wei_bo_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:titleSize="50dp"
        app:titleColor="@color/green"
        app:outCircleColor="@color/white"
        app:inCircleColor="@color/red"
        >
    </com.example.customview.view.WeiBoView>
    <Button 
        android:id="@+id/increase"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:letterSpacing="1.5"
        android:text="增加分数"
        />

    <Button 
        android:id="@+id/decrease"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:letterSpacing="0.8"
        android:text="减少分数"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:text="test Letter Space"
        />
</LinearLayout>
