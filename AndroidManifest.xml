<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <application
        android:name="com.example.customview.CustonViewApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.customview.activity.CallBackActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.WeiBoYunDongJiFenActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.QQHealthActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.FlowActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.ChartActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.ConflictActivity"
            ></activity>
        <activity
            android:name="com.example.customview.activity.WangYiActivity" 
            ></activity>
        <activity 
            android:name="com.example.customview.activity.AnimationViewActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.CustomDrawableActivity"
            ></activity>
        <activity
            android:name="com.example.customview.testAidl.CalculateClient" 
            ></activity>
        <activity 
            android:name="com.example.customview.activity.FlodButtonActivity"
            ></activity>
        <activity 
            android:name="com.example.customview.activity.SocketActivity"
            ></activity>
        
        <service 
            android:name="com.example.customview.testAidl.CalculateServer"
            android:process=":server"
            >
            <intent-filter>
                <action android:name="com.example.customview.testAidl.CalculateServer"/>
            </intent-filter>
        </service>
        <service 
            android:name="com.example.customview.testAidl.BinderPoolService"
            ></service>
    </application>

    <uses-permission 
        android:name="android.permission.INTERNET"
        />
    <uses-permission 
        android:name="android.permission.ACCESS_WIFI_STATE"
        />
</manifest>
